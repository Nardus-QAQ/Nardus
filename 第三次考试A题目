/*第三次考试A题目*/
#include<stdio.h>
int main()
{
	int a,b,c,n;
	scanf("%d",&n);
	int i=0;
	for(i=0;i<n;i++)
	{
		scanf("%d%d%d",&a,&b,&c);
		if(a<=0||b<=0||c<=0||a+b<=c||a+c<=b||b+c<=a)
		{
			printf("No\n");
		}
		else{
			
			if(a*a==b*b+c*c||b*b==a*a+c*c||c*c==b*b+a*a)
			printf("Yes\n");
			else 
			printf("No\n");
			
			
			
			
			
			
		}
		
		
		
	}
